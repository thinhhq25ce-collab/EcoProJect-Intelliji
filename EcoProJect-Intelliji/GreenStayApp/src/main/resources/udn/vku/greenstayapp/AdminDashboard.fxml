<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="udn.vku.greenstayapp.presentation.controller.AdminController"
      style="-fx-padding: 20;">

    <Label text="QUẢN LÝ HOMESTAY (ADMIN)" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Tên Homestay:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfName" promptText="Nhập tên..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Địa chỉ:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="tfAddress" promptText="Nhập địa chỉ..." GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Giá (VND):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfPrice" promptText="Nhập giá tiền..." GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Chứng chỉ xanh:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <CheckBox fx:id="cbEco" text="Đạt chuẩn Eco" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
        <Button text="Thêm Mới" onAction="#handleAdd" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Xóa Chọn" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Làm Mới" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>

        <Button text="Đăng Xuất" onAction="#handleLogout" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="tableHomestay" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colName" text="Tên Homestay" prefWidth="200"/>
            <TableColumn fx:id="colAddress" text="Địa chỉ" prefWidth="150"/>
            <TableColumn fx:id="colPrice" text="Giá tiền" prefWidth="100"/>
            <TableColumn fx:id="colEco" text="Eco" prefWidth="80"/>
        </columns>
    </TableView>
</VBox>