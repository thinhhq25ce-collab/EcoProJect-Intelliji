<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="udn.vku.greenstayapp.presentation.controller.LoginController"
      style="-fx-background-color: #f0f2f5; -fx-padding: 40;">

    <Label text="GreenStay Login" textFill="#2ecc71">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <VBox spacing="10" maxWidth="300" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <Label text="Tên đăng nhập:" />
        <TextField fx:id="tfUsername" promptText="Nhập username (vd: admin)" />

        <Label text="Mật khẩu:" />
        <PasswordField fx:id="pfPassword" promptText="Nhập password" />

        <Button text="Đăng nhập" maxWidth="Infinity" onAction="#handleLogin"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <Hyperlink text="Đăng ký tài khoản mới" onAction="#handleRegister" alignment="CENTER" maxWidth="Infinity"/>
    </VBox>

</VBox>