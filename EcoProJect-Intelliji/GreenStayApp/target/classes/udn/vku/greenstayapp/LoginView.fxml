<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="udn.vku.greenstayapp.presentation.controller.LoginController"
      stylesheets="@style.css" prefWidth="800" prefHeight="500">

    <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-background-color: linear-gradient(to bottom right, #27ae60, #2ecc71);">
        <Label text="GreenStay" textFill="WHITE">
            <font><Font name="Segoe UI Bold" size="40.0"/></font>
        </Label>
        <Label text="Hòa mình cùng thiên nhiên" textFill="#e8f5e9">
            <font><Font size="16.0"/></font>
        </Label>
    </VBox>

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 50;" minWidth="400">
        <Label text="Chào mừng trở lại!" textFill="#2c3e50">
            <font><Font name="System Bold" size="24.0"/></font>
        </Label>

        <VBox spacing="10" alignment="CENTER_LEFT" maxWidth="300">
            <Label text="Tên đăng nhập" textFill="#7f8c8d"/>
            <TextField fx:id="tfUsername" promptText="Nhập username..." />

            <Label text="Mật khẩu" textFill="#7f8c8d"/>
            <PasswordField fx:id="pfPassword" promptText="•••••••" />
        </VBox>

        <Button text="ĐĂNG NHẬP" onAction="#handleLogin" prefWidth="300" styleClass="button-primary"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Chưa có tài khoản?" textFill="#95a5a6"/>
            <Hyperlink text="Đăng ký ngay" onAction="#handleRegister" textFill="#27ae60" style="-fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</HBox>